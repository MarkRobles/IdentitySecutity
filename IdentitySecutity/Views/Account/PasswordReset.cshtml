@model IdentitySecutity.Models.PasswordResetModel
@{
    ViewBag.Title = "Password Reset";
}

<div class="row mt-5">
    <div class="col-12">
        <h2>@ViewBag.Title</h2>
    </div>

    @using (Html.BeginForm("PasswordReset", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary()
        <div class="col-12 d-flex flex-column  justify-content-around  ">
            @Html.HiddenFor(x => x.UserId)
            @Html.HiddenFor(x => x.Token)
            @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label  " })
            @Html.TextBoxFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })

        </div>
        <div class="col-12 mt-3">
            <input type="submit" value="Submit" class="btn-outline-primary btn-lg">
        </div>
    }

</div>
